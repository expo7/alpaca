{
    "version": "0.2.0",
    "configurations": [
        {
            // Run the currently open Python file
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            // Run your main trading script (change the filename to match your project)
            "name": "Python: Run main.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            // Run pytest in the whole workspace
            "name": "Python: pytest (workspace)",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-q"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
